<%- include ("../partials/header.ejs") %>
<div class="container centered-form">
    <h1>Add a comment</h1>
    <form action="/campground/<%= campground_id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <textarea class="form-control" placeholder="Enter your comment" name="comment[comment]" rows=4><%= comment.comment%></textarea>
        </div>
        <div class="form-group">
            <button type="submit">Submit</button>
        </div>
    </form>
</div>


