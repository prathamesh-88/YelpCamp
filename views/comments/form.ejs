<div class="container centered-form">
    <h1>Add a comment to <%= campground.name %></h1>
        <form action="/campground/<%= campground._id %>/comment" method="POST">
            <div class="form-group">
                <textarea class="form-control" placeholder="Enter your comment" name="comment[comment]" rows=4></textarea>
            </div>
            <div  class="form-group">
                <button type= "submit" >Submit</button>
            </div>
        </form>
</div>


