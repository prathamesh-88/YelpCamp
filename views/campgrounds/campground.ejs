<%- include ("../partials/header.ejs") %>
<div class="container">
    <div class="card">
        <div class="container">
            <div id="title">
                <img src="/campground.svg">
                <div class="text">
                    <h1 class="heading">Welcome to YelpCamp! </h1>
                    <p class="'subtext">These are the best campgrounds hand-picked for your need</p>
                </div>
            </div>
            <a href="/campground/new"><button class="btn btn-lg btn-info">Add new camp</button></a>
        </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <% campgrounds.forEach(camp =>{ %>
            <div class="col col-md-3 col-sm-6">
                <div class="thumbnail index-thumbnail">
                    <img src="<%= camp.image %>">
                    <div class='caption'>
                        <h3><%= camp.name %></h3>
                    </div>
                    <a href="/campground/<%= camp._id %>"><button class="btn">More info..</button></a>
                </div>
            </div>
            <% }); %>
    </div>
            
        
</div>
    


<%- include ("../partials/footer.ejs") %>