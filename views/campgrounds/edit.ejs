<%- include ("../partials/header.ejs") %>
<div class="container centered-form">
    <h1>Edit <%= campground.name %></h1>
    <form action="/campground/<%=campground._id %>?_method=PUT" method="POST">
        <div class="form-element">
            <input class="form-control" type="text" placeholder="Camp Name" value="<%= campground.name %> "name="camp[name]">
        </div>
        <div class="form-element">
            <input class="form-control" type="text" placeholder="Image URL" value="<%= campground.image %> name="camp[image]">
        </div>
        <div class="form-element">
            <textarea class="form-control" placeholder="Description" name="camp[description]" rows=10><%= campground.description %></textarea>
        </div>
            <button type="submit">Submit</button>
    </form>
</div>


